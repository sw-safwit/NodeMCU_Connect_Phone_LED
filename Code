#include <ESP8266WiFi.h>
#include <ESP8266WebServer.h>


ESP8266WebServer server(80);  // สร้าง Web Server ที่พอร์ต 80
const char* ssid = "LED_Control";
const char* password = "12345678";


#define LED_PIN 0  // LED บน NodeMCU D3


void handleRoot() {
  String html = R"rawliteral(
    <!DOCTYPE html>
    <html>
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <style>
        body {
          font-family: "Arial", sans-serif;
          background-color: #f2f2f2;
          text-align: center;
          padding-top: 50px;
        }
        h1 {
          color: #333;
        }
        .button {
          background-color: #0000CD;
          border: none;
          color: white;
          padding: 15px 30px;
          text-align: center;
          font-size: 18px;
          margin: 10px;
          border-radius: 8px;
          cursor: pointer;
          transition: 0.3s;
        }
        .button:hover {
          background-color: #45a049;
        }
        .off {
          background-color: #f44336;
        }
        .off:hover {
          background-color: #da190b;
        }
      </style>
    </head>
    <body>
      <h1>ควบคุมหลอดไฟ</h1>
      <a href="/on"><button class="button">ปิดไฟ</button></a>
      <a href="/off"><button class="button off">เปิดไฟ</button></a>
    </body>
    </html>
  )rawliteral";


  server.send(200, "text/html; charset=utf-8", html);
}



void handleOn() {
  digitalWrite(LED_PIN, LOW);  // LOW = เปิดไฟ (LED บน NodeMCU ทำงานกลับทาง)
  server.sendHeader("Location", "/");
  server.send(303);
}


void handleOff() {
  digitalWrite(LED_PIN, HIGH);  // HIGH = ปิดไฟ
  server.sendHeader("Location", "/");
  server.send(303);
}


void setup() {
  Serial.begin(115200);
  pinMode(LED_PIN, OUTPUT);
  digitalWrite(LED_PIN, HIGH); // ปิดไฟเริ่มต้น


  // สร้าง Wi-Fi เป็น Access Point
  WiFi.softAP(ssid, password);
  Serial.println("Access Point Started");
  Serial.print("IP address: ");
  Serial.println(WiFi.softAPIP());


  // ตั้งเส้นทางหน้าเว็บ
  server.on("/", handleRoot);
  server.on("/on", handleOn);
  server.on("/off", handleOff);


  server.begin();
  Serial.println("Web server started");
}


void loop() {
  server.handleClient();
}

